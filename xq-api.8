  "data": [
    "0ad",
    "0ad\-32bit",
    "0ad\-data",
    "2048\-qt",
    "2bwm",
    "... EXAMPLE ELLIPSIZED ...",
    "zzuf",
    "zzuf\-32bit"
  ]
}
.fi
